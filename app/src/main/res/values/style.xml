<?xml version="1.0" encoding="utf-8"?>


<resources>
    <style name="cust_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowTitleStyle">@style/dialog_title_style</item>
    </style>

    <style name="dialog_title_style" parent="android:Widget.TextView">
        <item name="android:background">@android:color/black</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor"> @color/main </item>

    </style>

    <style name="cust_dialog2" parent="@android:style/Theme.Dialog">
        <item name="android:windowTitleStyle">@style/dialog_title_style2</item>
        <item name="android:windowActionBar">false</item>
    </style>


    <style name="dialog_title_style2" parent="android:Widget.TextView">
        <item name="android:background">@color/black</item>
        <item name="android:textColor"> @color/main </item>
        <item name="android:textSize">15dp</item>
    </style>

</resources>


